        <activity
            android:name="com.mybeats.fixkoro.CartItemsCard"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">

        </activity>

        <activity
            android:name="com.mybeats.fixkoro.TechListCard"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">

        </activity>

        <activity
            android:name="com.mybeats.fixkoro.Signup"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name="com.mybeats.fixkoro.PlaceOrder"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name="com.mybeats.fixkoro.Login"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name="com.mybeats.fixkoro.Categories"
            android:label="Categories"
            android:parentActivityName="com.mybeats.fixkoro.MainActivity"
