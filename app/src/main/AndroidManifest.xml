            android:name="com.mybeats.fixkoro.ItemDetails"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|adjustPan">

        </activity>
        <activity
            android:name="com.mybeats.fixkoro.TechList"
